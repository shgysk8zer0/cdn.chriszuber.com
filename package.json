{
  "name": "cdn.kernvalley.us",
  "version": "1.0.1",
  "private": true,
  "description": "Static assets for modern web development",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shgysk8zer0/cdn.kernvalley.us.git"
  },
  "keywords": [
    "cdn",
    "ecmascript",
    "es6",
    "css",
    "web components",
    "custom elements"
  ],
  "author": "Chris Zuber <admin@kernvalley.us>",
  "homepage": "https://cdn.kernvalley.us",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shgysk8zer0/cdn.kernvalley.us/issues"
  },
  "config": {
    "serve": {
      "domain": "localhost",
      "path": "./",
      "port": 8081
    },
    "dir": {
      "css": "css/ components/",
      "js": "js/ components/",
      "img": "img/",
      "html": "components/**/*.html components/*.html *.html"
    }
  },
  "scripts": {
    "preinstall": "git submodule update --init --recursive",
    "postinstall": "npm run build",
    "start": "npm run netlify:live",
    "build": "svg-sprite-generate -c icons.csv -o img/icons.svg",
    "test": "npm run lint:js && npm run lint:css && npm run lint:html",
    "lint:css": "if [ -f .stylelintrc.json ]; then stylelint ${npm_package_config_dir_css}; fi",
    "lint:js": "if [ -f .eslintrc.json ]; then eslint .; fi",
    "lint:html": "if [ -f .htmlhintrc ]; then htmlhint ${npm_package_config_dir_html} --ignore=./css/; fi",
    "fix:css": "stylelint ${npm_package_config_dir_css} --fix",
    "fix:js": "eslint . --fix",
    "fix": "npm run fix:js && npm run fix:css",
    "netlify:deploy": "netlify deploy",
    "netlify:serve": "netlify dev",
    "netlify:live": "netlify dev --live"
  },
  "dependencies": {
    "svg-sprite-generator": "0.0.7"
  },
  "devDependencies": {
    "eslint": "^7.11.0",
    "eslint-plugin-async-await": "0.0.0",
    "htmlhint": "^0.14.1",
    "stylelint": "^13.7.2",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-standard": "^20.0.0",
    "svgo": "^1.3.2"
  }
}
